<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Gang Wang">
        <createTable tableName="user">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="createTime" type="timestamp"/>
            <column name="updateTime" type="timestamp"/>  
            <column name="name" type="varchar(64)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="Gang Wang">
        <insert tableName="user">
            <column name="name" value="test"/>
        </insert>
    </changeSet>
    
    <changeSet id="3" author="Gang Wang">
        <addColumn tableName="user">
            <column name="nickName" type="varchar(64)"/>
            <column name="longitude" type="decimal(10,7)"/>
            <column name="latitude" type="decimal(10,7)"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="4" author="Gang Wang">
        <addColumn tableName="user">
            <column name="mobile" type="varchar(20)"/>
            <column name="source" type="varchar(64)"/>
        </addColumn>
    </changeSet>
	
    <changeSet id="5" author="Gang Wang">
        <dropColumn tableName="user" columnName="nickName"/>
    </changeSet>
</databaseChangeLog>